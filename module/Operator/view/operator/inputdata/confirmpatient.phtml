			$('#submitExam').prop('disabled', true);
			if ($('#examination').val() > 0) {
				$('#btnNormActivity').removeAttr('disabled');
				$('#btnMinActivity').removeAttr('disabled');
				$('#btnMaxActivity').removeAttr('disabled');
			
				loadExamination($('#examination').val());
			} else {
				$('#btnNormActivity').attr('disabled');
				$('#btnMinActivity').attr('disabled');
				$('#btnMaxActivity').attr('disabled');
			}
		});
		
		$('#activity').change(function () {
			console.log('activity change =>' + $('#activity').val());
			$('#submitExam').prop('disabled', true);
			setActivity();
		});

		$('#weight').change(function () {
			$('#submitExam').prop('disabled', true);
			updateWeight();
		});
	});
</script>
