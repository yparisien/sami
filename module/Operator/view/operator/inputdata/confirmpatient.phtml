<script type="text/javascript">

	var patientSetted = false;
	var examinaSetted = false;
	var activitySaved = null;
									
	$(function () {
	  $('[data-toggle="tooltip"]').tooltip()
	});

	function	dontChangeMaxActivity() {
		$('#activity').val(activitySaved);
		$('#alertmaxactivity').modal('hide');
		//TODO Appel a un log en ajax et lancement loadactivitydata onresult
		loadActivityData();
	}
	
	function	dontChangeMinActivity() {
		$('#activity').val(activitySaved);
		$('#alertminactivity').modal('hide');
		//TODO Appel a un log en ajax et lancement loadactivitydata onresult
		loadActivityData();
	}
	
	function	checkAccessAuthority() {
		$.ajax({
			url: "<?php echo $this->url('setup', array('action'=>'confirmauthority'));?>",
			type: "POST",
			data: {
				'login'		: $('#login').val(),
				'password'	: $('#password').val(),
				'activity' 	: activitySaved,
			},
			dataType: "json"
		}).done(function(result) {
			$('#errorConfirm').removeClass('hide');
			if (result.error == true) {
				$('#errorConfirm').show();
				$('#errorConfirmMessage').text(result.message);
				$('#login').val('');
				$('#password').val('');
			} else {
				$('#activity').val(activitySaved);
				loadActivityData();
				$('#errorConfirm').hide();	
				$("#alertconfirmauthority").modal('hide');
			}
		});
	}

	function	correctActivity(idToClose) {
		$('#activity').val(0);
		$('#activity').focus();
		$("#" + idToClose).modal('hide');
	}

	function	authorityConfirm() {
		$("#alertmaxcenteractivity").modal('hide');
		$("#alertconfirmauthority").modal({
			backdrop: "static",
			keyboard: false,
			show: true,
		});
	}
	
	function	setPatientAndShowExam()
	{
		$('#spanLastname').text($('#lastname').val());
		$('#spanFirstname').text($('#firstname').val());
		
		$.ajax({
			url: "<?php echo $this->url('setup', array('action'=>'aupdatepatient'));?>",
			type: "POST",
			data: {
				'patientid'		: $('#patient-id').val(),
				'lastname'		: $('#lastname').val(),
				'firstname'		: $('#firstname').val(),
				'birthdate'		: $('#birthdate').val(),
				'expeditornum'	: $('#expeditornum').val(),
				'weight' 		: $('#weight').val(),
			},
			dataType: "json"
		}).done(function(result) {
			loadInjection(<?php echo $patientid;?>);
			$('#collapseOne').collapse('hide');
			$('#collapseTwo').collapse('show');
			patientSetted = true;
		});
	}
				
	function	cancelPatient()
	{
		$.ajax({
			url: "<?php echo $this->url('setup', array('action' => 'ainputsoftexit'));?>",
			type: "GET",
			dataType: "json",
		}).done(function(result) {
			location.href = '<?php echo $this->url('setup', array('action'=>'selectpatient')); ?>';
		});
	}

	//Appel au robot							
	function	setMinActivity()
	{
		$.ajax({
			url: "<?php echo $this->url('setup', array('action'=>'asetactivity'));?>",
			type: "POST",
			dataType: "json",
			data: {"min" : 1}
		}).done(function(result) {
			$('#activity').val(result.activity);
			loadActivityData();
		});
	}

	//Appel au robot
	function	setMaxActivity()
	{
		$.ajax({
			url: "<?php echo $this->url('setup', array('action'=>'asetactivity'));?>",
			type: "POST",
			dataType: "json",
			data: {"max" : 1}
